# Dockerfile for client project

# Base image
FROM node:lts-alpine

# Set working directory
WORKDIR /app

COPY ../../package.json ../../yarn.lock /app/

# Copy dependencies
COPY package.json . /app/packages/client/

# Install dependencies
RUN yarn install

# Copy source code
COPY src /app/packages/client/src

# Build the application
RUN yarn workspace senior-welfare-center-client build

# Expose port
EXPOSE 80
